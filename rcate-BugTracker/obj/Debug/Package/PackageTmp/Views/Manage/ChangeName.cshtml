@model rcate_BugTracker.Models.ChangeNameViewModel
@{
    ViewBag.Title = "ChangeName";
}
<center>
    <h2>Change First Name</h2>

    @using (Html.BeginForm("ChangeName", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <hr />

        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">

                <br />

                <input name="NewName" style="text-align:center;width:250px" placeholder="@Model.NewName" />
                @*@Html.EditorFor(m => m.NewName, new { @class = "form-control" })*@
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Change Name" class="btn btn-primary btn-sm" />
            </div>
        </div>

    }
</center>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}